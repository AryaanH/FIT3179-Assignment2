{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Domestic Tourist Spending by Category in Australia (2024)",
  "width": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Assignment2/refs/heads/main/data/visualisation4.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Category",
      "type": "nominal",
      "sort": "-x",
      "axis": {
        "title": "Category",
        "labelLimit": 200
      }
    },
    "x": {
      "field": "Spending",
      "type": "quantitative",
      "axis": {
        "title": "Spending ($M)",
        "format": ",.0f"
      }
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "legend": null,
      "scale": {
        "range": [
          "#44AA99"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Category",
        "type": "nominal",
        "title": "Category"
      },
      {
        "field": "Spending",
        "type": "quantitative",
        "title": "Spending ($M)",
        "format": ",.2f"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "grid": false
    }
  }
}