{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Nights Spent ('000) by Visitors in Different Accommodations by State",
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Assignment2/refs/heads/main/data/visualisation5.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "calculate": "datum.Nights == 0 ? 'Data not available' : datum.Nights",
      "as": "Formatted Nights"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": {
        "title": "State"
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Nights",
      "type": "quantitative",
      "axis": {
        "title": "Nights Spent ('000)"
      }
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "legend": {
        "title": "Accommodation Type",
        "offset": 0
      },
      "scale": {
        "range": [
          "#594AA4",
          "#117733",
          "#44AA99",
          "#88CCEE",
          "#DDCC77",
          "#CC6677",
          "#AA4499",
          "#882255",
          "#6D716E"
        ]
      }
    },
    "tooltip": [
      {
        "field": "State",
        "type": "nominal",
        "title": "State"
      },
      {
        "field": "Type",
        "type": "nominal",
        "title": "Accommodation Type"
      },
      {
        "field": "Formatted Nights",
        "type": "nominal",
        "title": "Nights Spent ('000)"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "grid": false
    }
  }
}