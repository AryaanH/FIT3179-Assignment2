{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Visitors(Millions) for each State",
  "width": 400,
  "height": 300,
  "projection": {
    "type": "equirectangular"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Assignment2/refs/heads/main/data/state_wise_spending_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "yearFilter",
      "value": 2024,
      "bind": {
        "input": "radio",
        "options": [
          2023,
          2024
        ],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Assignment2/refs/heads/main/js/ne_10m_admin_1_states_provinces.json",
          "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_states_provinces"
          }
        },
        "key": "properties.name"
      },
      "as": "countryLayout"
    },
    {
      "filter": "datum.Year == yearFilter"
    },
    {
      "calculate": "format((datum.Trips*1000)/1000000, '.2f')",
      "as": "Total visitors"
    },
    {
      "calculate": "upper(slice(datum.countryLayout.properties.abbrev, 0, [length(datum.countryLayout.properties.abbrev)-1]))",
      "as": "Formatted Abbrev"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "shape": {
          "field": "countryLayout",
          "type": "geojson"
        },
        "color": {
          "field": "Total visitors",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "range": [
              "#f0f9e8",
              "#ccebc5",
              "#a8ddb5",
              "#7bccc4",
              "#4eb3d3",
              "#2b8cbe",
              "#08589e"
            ],
            "domain": [
              3,
              6,
              11,
              20,
              28,
              35
            ]
          },
          "legend": {
            "title": "Number of Visitors (Millions)"
          }
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Total visitors",
            "type": "quantitative",
            "title": "Total Visitors (in Millions)"
          },
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 9,
        "fontWeight": "lighter",
        "dy": -7,
        "dx": -6,
        "color": "black"
      },
      "encoding": {
        "text": {
          "field": "Formatted Abbrev"
        },
        "longitude": {
          "field": "countryLayout.properties.longitude"
        },
        "latitude": {
          "field": "countryLayout.properties.latitude"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 6,
        "fontWeight": "bold",
        "dx": 60,
        "dy": -5,
        "color": "#282f38",
        "fontStyle": "italic"
      },
      "transform": [
        {
          "filter": "datum.State == 'Tasmania' && datum.Year == 2024"
        }
      ],
      "encoding": {
        "longitude": {
          "field": "countryLayout.properties.longitude"
        },
        "latitude": {
          "field": "countryLayout.properties.latitude"
        },
        "text": {
          "value": "Slight increase from past Year"
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Total visitors",
            "type": "quantitative",
            "title": "Total Visitors (in Millions)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 6,
        "fontWeight": "bold",
        "dx": 10,
        "dy": 15,
        "color": "#282f38",
        "fontStyle": "italic"
      },
      "transform": [
        {
          "filter": "datum.State == 'Victoria' && datum.Year == 2024"
        }
      ],
      "encoding": {
        "longitude": {
          "field": "countryLayout.properties.longitude"
        },
        "latitude": {
          "field": "countryLayout.properties.latitude"
        },
        "text": {
          "value": "Slight increase from past Year"
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Total visitors",
            "type": "quantitative",
            "title": "Total Visitors (in Millions)"
          }
        ]
      }
    }
  ]
}