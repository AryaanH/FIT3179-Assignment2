{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Visitor Reasons by State",
  "width": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Assignment2/refs/heads/main/data/category_spending.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "calculate": "format((datum.Trips*1000)/1000000, '.2f')",
      "as": "Adjusted Trips"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": {
        "title": "State",
        "grid": false
      },
      "sort": "-y"
    },
    "y": {
      "aggregate": "sum",
      "field": "Adjusted Trips",
      "type": "quantitative",
      "title": "Number of Visitors(",
      "axis": {
        "title": "Number of Visitors (Millions)",
        "grid": false
      }
    },
    "color": {
      "field": "Reason",
      "type": "ordinal",
      "scale": {
        "range": [
          "#44AA99",
          "#88CCEE",
          "#DDCC77",
          "#9486D8"
        ]
      },
      "legend": {
        "title": "Reason for Visit"
      }
    },
    "tooltip": [
      {
        "field": "State",
        "type": "nominal",
        "title": "State"
      },
      {
        "field": "Reason",
        "type": "nominal",
        "title": "Reason"
      },
      {
        "field": "Adjusted Trips",
        "type": "quantitative",
        "title": "Number of Visitors (Millions)"
      }
    ]
  },
  "config": {
    "bar": {
      "tooltip": true
    }
  }
}