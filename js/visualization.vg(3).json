{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Spending by Visit Reason in Australian States",
  "width": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Assignment2/refs/heads/main/data/category_spending.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Spending",
          "as": "Total Spending"
        }
      ],
      "groupby": [
        "Reason",
        "State"
      ]
    },
    {
      "calculate": "datum.State",
      "as": "State"
    },
    {
      "filter": "datum.State == stateFilter || stateFilter == 'ALL'"
    }
  ],
  "params": [
    {
      "name": "stateFilter",
      "value": "ALL",
      "bind": {
        "input": "select",
        "options": [
          "ALL",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 50
  },
  "encoding": {
    "theta": {
      "field": "Total Spending",
      "type": "quantitative",
      "stack": true
    },
    "color": {
      "field": "Reason",
      "type": "nominal",
      "legend": {
        "title": "Reason for Visit"
      },
      "scale": {
        "range": [
          "#44AA99",
          "#88CCEE",
          "#DDCC77",
          "#9486D8"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Reason",
        "type": "nominal",
        "title": "Reason"
      },
      {
        "field": "Total Spending",
        "type": "quantitative",
        "title": "Total Spending ($M)",
        "format": ",.2f"
      },
      {
        "field": "State",
        "type": "nominal",
        "title": "State"
      }
    ]
  },
  "view": {
    "stroke": "transparent"
  }
}